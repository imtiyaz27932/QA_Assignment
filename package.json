{
  "name": "playwright-testing-framework",
  "version": "1.0.0",
  "description": "Comprehensive Playwright testing framework with advanced features",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:mobile": "npx playwright test --project=mobile-chrome --project=mobile-safari",
    "test:api": "npx playwright test tests/apiTests",
    "test:ui-tests": "npx playwright test tests/uiTests",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "test:parallel": "npm run set-parallel && npm run test",
    "test:sequential": "npm run set-sequential && npm run test",
    "report": "npx playwright show-report",
    "report:allure": "allure serve allure-results",
    "install:browsers": "npx playwright install",
    "install:deps": "npx playwright install-deps",
    "set-parallel": "node utils/setConfig.js parallel",
    "set-sequential": "node utils/setConfig.js sequential",
    "set-headless": "node utils/setConfig.js headless",
    "set-headed": "node utils/setConfig.js headed",
    "clean": "rm -rf test-results playwright-report allure-results",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "pre-commit": "npm run lint && npm run format"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "allure-playwright": "^2.15.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "axios": "^1.11.0",
    "chalk": "^5.4.1",
    "dotenv": "^17.2.1",
    "moment": "^2.30.1",
    "lodash": "^4.17.21"
  },
  "keywords": ["playwright", "testing", "automation", "framework", "e2e"],
  "author": "Playwright Framework",
  "license": "MIT"
}
